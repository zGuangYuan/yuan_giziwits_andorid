<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/Net_Config_topBar_ID"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_title_color="@color/tab_panel_bg" />

    <!--图片分成6份-->
    <ImageView
        android:src="@drawable/adddevice_wificonfig_bg1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_weight="0.6"/>
    <!--下面的编辑框分成4份-->
    <RelativeLayout
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <!--wifi显示框-->
        <LinearLayout

        android:id="@+id/aa1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_wifi_edit_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="当前WiFi："
            android:textColor="@color/qmui_config_color_gray_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_ssid_ID"
            android:text="yuangege"
            android:textColor="@color/qmui_config_color_gray_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        </LinearLayout>
        <!--密码填充显示框-->
        <RelativeLayout
            android:id="@+id/aa2"
            android:layout_below="@id/aa1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_password_ID"
                android:hint="Wi-Fi密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/bg_wifi_password_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <CheckBox
                android:id="@+id/cb_pw_control_ID"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/password_selector"
                android:button="@null"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <!--确认搜索框-->
        <LinearLayout
            android:layout_below="@id/aa2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_search_ID"
                android:text="确认搜索"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/press_search_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>