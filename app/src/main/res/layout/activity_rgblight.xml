<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/color_test_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择灯的颜色"
        android:textSize="20dp"
        android:textColor="@color/alert_blue"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"/>
    <CheckBox
        android:id="@+id/RedLight_ID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/red_selecter_cb"
        android:button="@null"
        android:layout_below="@+id/color_test_ID"
        android:layout_alignLeft="@+id/color_sel_sure_ID"
        android:layout_alignStart="@+id/color_sel_sure_ID" />
    <CheckBox
        android:id="@+id/GreenLight_ID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/green_selecter_cb"
        android:layout_below="@+id/color_test_ID"
        android:layout_centerHorizontal="true"
        android:button="@null"/>
    <CheckBox
        android:id="@+id/BlueLight_ID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/blue_selecter_cb"
        android:layout_below="@+id/color_test_ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:button="@null"/>
    <CheckBox
        android:id="@+id/PinkLight_ID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/pink_selecter_cb"
        android:button="@null"
        android:layout_below="@+id/RedLight_ID"
        android:layout_alignLeft="@+id/RedLight_ID"
        android:layout_alignStart="@+id/RedLight_ID"
        android:layout_marginTop="30dp"/>
    <CheckBox
        android:id="@+id/YellowLight_ID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/yelllow_selecter_cb"
        android:layout_below="@+id/BlueLight_ID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:button="@null"/>
    <CheckBox
        android:id="@+id/WhiteLight_ID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/white_selecter_cb"
        android:layout_below="@+id/BlueLight_ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="30dp"
        android:button="@null"/>
    <TextView
        android:id="@+id/tv_aa_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PinkLight_ID"
        android:text="您选择的颜色是："
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/show_color_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未选择"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:layout_alignBaseline="@+id/tv_aa_id"
        android:layout_alignBottom="@+id/tv_aa_id"
        android:layout_alignLeft="@+id/YellowLight_ID"
        android:layout_alignStart="@+id/YellowLight_ID"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />
    <Button
        android:id="@+id/color_sel_sure_ID"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        android:layout_below="@id/tv_aa_id"
        android:text="确认"/>
    <Button
        android:id="@+id/color_sel_cancle_ID"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@id/tv_aa_id"
        android:text="取消"/>



</RelativeLayout>
